[RS485]
#------------
# RS485 연결 설정
# type: serial (USB RS485) 또는 socket (네트워크 RS485)
#------------

# Option 1: Serial 연결 (USB to RS485 어댑터)
#type = serial
#serial_port = /dev/ttyUSB0

# Option 2: Socket 연결 (Elfin EW11 등 네트워크 RS485)
type = socket
socket_server = 192.168.0.222
socket_port = 8899


[MQTT]
#------------
# MQTT 브로커 설정
#------------
mqtt_server = core-mosquitto
mqtt_port = 1883
mqtt_allow_anonymous = False
mqtt_username = homeassistant
mqtt_password = your_password_here


[Device]
#------------
# 활성화할 장치 목록
#------------
enabled = fan, elevator, light_livingroom, light_room1, light_room2, light_room3, light_kitchen, thermo_livingroom, thermo_room1, thermo_room2, thermo_room3, ac_livingroom, ac_room1, ac_room2, ac_room3, ac_kitchen


[Elevator]
#------------
# 엘리베이터 설정
#------------
type = rs485
rs485_floor = 15


[Log]
#------------
# 로그 설정
#------------
show_query_hex = True
show_recv_hex = True
show_mqtt_publish = True
show_mqtt_discovery = False


[User]
#------------
# 사용자 초기 설정
#------------
init_temp = 23
init_fan_mode = Medium
light_count = 3
thermo_init_temp = 23
ac_init_temp = 21
ac_init_mode = cool
fan_init_fan_mode = low
ac_init_fan_mode = LOW